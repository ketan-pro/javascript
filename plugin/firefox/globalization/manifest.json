{
    "manifest_version": 2,
    "name": "Globalization",
    "version": "1.4",
    "description": "Globalization extension to mark selected strings and take screenshots.",
    "commands": {
        "_execute_sidebar_action": {
            "suggested_key": {
                "default": "Alt+Ctrl+G"
            }
        },
        "take-screenshot": {
            "suggested_key": {
                "default": "Alt+Ctrl+S"
            }
        }
    },
    "background": {
        "scripts": ["scripts/background.js"]
    },
    "sidebar_action": {
        "default_icon": {
            "48": "globe.jpg"
        },
        "default_title": "Globalization",
        "default_panel": "popup/menu.html",
        "open_at_install": true
    },
    "permissions": [
        "activeTab",
        "browserSettings",
        "browsingData",
        "downloads",
        "downloads.open",
        "menus",
        "nativeMessaging",
        "notifications",
        "sessions",
        "storage",
        "tabHide",
        "tabs",
        "webNavigation",
        "webRequest",
        "<all_urls>"
    ],
    "icons": {
        "48": "globe.jpg"
    }
}